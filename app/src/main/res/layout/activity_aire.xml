<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_layout"
    tools:context=".aire.AireActivity">

    <!-- NavBar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/HeaderBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        app:title=" "
        tools:layout_editor_absoluteX="73dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Calidad del aire"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/searchCard"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <Spinner
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:queryHint="Localidades" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/calidadAire_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:elevation="16dp"
        app:cardBackgroundColor="@color/background_layout"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchCard">

        <LinearLayout
            android:id="@+id/airQualityLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/searchView">

            <TextView
                android:id="@+id/pmText"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circular_border"
                android:gravity="center"
                android:text="89"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="30dp"
                android:lines="2"
                android:text="location"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <!--Condicion-->
    <androidx.cardview.widget.CardView
        android:id="@+id/condition_card"
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:elevation="16dp"
        app:cardBackgroundColor="@color/background_layout"
        app:cardCornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calidadAire_card">

        <RelativeLayout
            android:id="@+id/conditionLL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/searchView">

            <ImageView
                android:id="@+id/conditionImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_parcialmentenublado"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/conditionTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#2D1A5853"
                android:gravity="center"
                android:text="Parcialmente nublado"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/condition_card">
        <!--temperatura-->
        <androidx.cardview.widget.CardView
            android:id="@+id/temperatura_card"
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:elevation="16dp"
            app:cardBackgroundColor="@color/background_layout"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:id="@+id/temperaturaLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/searchView">

                <TextView
                    android:id="@+id/temperaturaTxt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#2D1A5853"
                    android:gravity="center"
                    android:text="22°"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="29sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#2D1A5853"
                    android:gravity="center"
                    android:text="Temperatura"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent" />
        <!--sensasion termica-->
        <androidx.cardview.widget.CardView
            android:id="@+id/sensacion_card"
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:elevation="16dp"
            app:cardBackgroundColor="@color/background_layout"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:id="@+id/sensacionLL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/searchView">

                <TextView
                    android:id="@+id/sensacionTxt"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#2D1A5853"
                    android:gravity="center"
                    android:text="19°"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="29sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#2D1A5853"
                    android:gravity="center"
                    android:text="Sensación térmica"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>